{
  "name": "eth-yellow-api",
  "version": "1.0.0",
  "author": "Dagim G. Astatkie",
  "description": "Backend for EthYellow",
  "main": "server.js",
  "scripts": {
    "dev:express": "nodemon server/server.js",
    "dev": "docker-compose up -d",
    "dev:log": "docker-compose up -d && yarn all:log",
    "down": "docker-compose down",
    "restart": "docker-compose restart",
    "all:log": "docker-compose logs -f --tail 100",
    "express:log": "docker-compose logs -f --tail 100 yellow_express",
    "graphql:log": "docker-compose logs -f --tail 100 yellow_graphql_engine",
    "hasura:init": "hasura init hasura",
    "hasura": "hasura --project hasura --envfile ../.env --endpoint http://localhost:2000",
    "hasura:prod": "hasura --project hasura --envfile ../.env.prod --endpoint https://ethyellowapi.koyeb.app",
    "console": "yarn hasura console --console-port 2003",
    "console:prod": "yarn hasura:prod console --api-port 4074 --console-port 4075",
    "migrate": "yarn hasura migrate apply && yarn hasura metadata apply",
    "migrate:prod": "yarn hasura:prod migrate apply && yarn hasura:prod metadata apply",
    "migrate:status": "yarn hasura migrate status",
    "migrate:status:prod": "yarn hasura:prod migrate status",
    "seed": "yarn hasura seeds apply",
    "seed:prod": "yarn hasura:prod seeds apply",
    "rebuild": "docker-compose build yellow_express && yarn dev",
    "rebuild:graphql": "docker-compose build yellow_graphql_engine && yarn dev"
  },
  "dependencies": {
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "1.6.6",
    "apollo-link-http": "^1.5.17",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.0",
    "cross-fetch": "^3.0.6",
    "date-fns": "^2.28.0",
    "dotenv": "^16.4.5",
    "express": "^4.17.3",
    "file-type": "^16.2.0",
    "global": "^4.4.0",
    "graphql": "^15.5.0",
    "graphql-tag": "^2.11.0",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.2",
    "uuid": "^8.3.2"
  },
  "keywords": [],
  "license": "ISC"
}
